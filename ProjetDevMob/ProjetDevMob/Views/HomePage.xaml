<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProjetDevMob.Views.HomePage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="CenterAndExpand">

            <Label
                Text="Projet Developpement Mobile"
                XAlign="Center"
                HorizontalOptions="Center"
                FontSize="30"
                FontAttributes="Bold"
                WidthRequest="300"
                HeightRequest="80"
                Margin="0, 90, 0, 15"/>

            <Label
                Text="2018 - 2019"
                XAlign="Center"
                HorizontalOptions="Center"
                FontSize="Large"
                FontAttributes="Bold"
                HeightRequest="180"/>

            <Label
                Text="Groupe: MESSAOUDENE / HADOUCH"
                XAlign="Center"
                HorizontalOptions="Center"
                FontSize="Large"
                FontAttributes="Bold" />

        </StackLayout>
    </ContentPage.Content>



</ContentPage>